server {
    listen 443 ssl;
    listen [::]:443 ssl;

    ssl_certificate {{ external.certificates.mail.full_chain }};
    ssl_certificate_key {{ external.certificates.mail.key }};

    server_name mail.{{ domains.external }};

    location / {
        proxy_pass http://localhost:10443;
        proxy_set_header X-Forwarded-For   $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

