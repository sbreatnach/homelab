[Unit]
Description=Matrix-Facebook bridge
PartOf=matrix-synapse.target
After=matrix-synapse.service

[Service]
WorkingDirectory={{ matrix.directory.main }}/mautrix-facebook
ExecStart={{ matrix.directory.venv_base }}/mautrix-facebook/bin/python -m mautrix_facebook -c {{ matrix.directory.mautrix_conf }}/mautrix-facebook-config.yaml -r {{ matrix.directory.extraconf }}/mautrix-facebook-registration.yaml
User={{ matrix.user }}
Restart=always

[Install]
WantedBy=matrix-synapse.target