[Unit]
Description=Matrix-Hangouts bridge
PartOf=matrix-synapse.target
After=matrix-synapse.service

[Service]
WorkingDirectory={{ matrix.directory.main }}
ExecStart={{ matrix.directory.venv }}/bin/python -m mautrix_hangouts -c {{ matrix.directory.extraconf }}/mautrix-hangouts-config.yaml -r {{ matrix.directory.extraconf }}/mautrix-hangouts-registration.yaml
User=matrix-synapse
Restart=always

[Install]
WantedBy=matrix-synapse.target